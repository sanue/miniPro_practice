/**index.wxss**/
.news-top {
  position: relative
}
.news-top image {
  width: 750rpx;
  height: 500rpx
}
.news-top .top-content {
  position: absolute;
  bottom: 0;
  color: #fff;
  padding: 30rpx;
}
.news-top .top-content .top-content-bottom {
  font-size: 30rpx;
}
.news-top .top-content .top-content-bottom text {
  margin-right:6rpx
}
.title-box{
  display: flex;
  font-size: 34rpx;
  color: #c7e4f6;
  text-align: center;
  background-color: #339cdf;
}
.title-box view{
  flex: 1;
  line-height: 3
}
.title-box view.active{
  color: #fff;
  position: relative
}
.news-list .list-item .title{
  font-size: 28rx;
  color:#333;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.news-list .list-item {
  margin: 30rpx;
  overflow: hidden
}
.news-list .list-item .source,.news-list .list-item .date {
  font-size: 30rpx;
  color: #666;
  margin-right:16rpx;
  display: inline-block
}
.news-list .list-item .item-left {
  width: 460rpx
}
.news-list .list-item .item-right {
  width: 220rpx
}
.news-list .list-item .item-right image{
  width: 220rpx;
  height:180rpx
}

